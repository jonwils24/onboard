<div class='container-fluid'>
  <div class='navbar-brand'>
    <%= link_to t(:brand), root_path %>
  </div>
  <div class='container-fluid'>
    <ul class='nav navbar-nav navbar-right'>
      <% if user_signed_in? %>
        <li><%= link_to 'Account', edit_user_registration_path %></li>
