- p = @fb.profile

.row-fluid
	.span12.div.fb.pts.pls
		- pronoun = p['gender'] == "male" ? "he" : "she"
		- pronoun_possesive = p['gender'] == "male" ? "his" : "hers"
		.row-fluid
			.span1.right= image_tag('current_city.png')
			- g = @fb.graph
			- loc = g.get_object(p['location']['id'])
			.span11
				= "Lives in "
				= link_to p['location']['name'], loc['link']
		.row-fluid
			.span1.right= image_tag('hometown.png')
			- loc = g.get_object(p['hometown']['id'])
			.span11
				= "From "
				= link_to p['hometown']['name'], loc['link']
		.row-fluid
			.span1.right= image_tag('work.png')
			.span11= "Work? Writing this!"
		.row-fluid
			.span1.right= image_tag('school.png')
			.span11= "The School of HardKnocks"